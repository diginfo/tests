.easyui-layout(data-options="fit:true,border:false")
  .easyui-panel(region="west" style="width:410px;background:#FAFAFA;" collapsible="false")
    form#parttrans(style="display:inline")
      +fitem('Part ID',{name:'PART_ID', readonly:true,requiredx:true,class:'easyui-textbox'})
      +fitem('Tx ID',{name:'TRANSACTION_ID', readonly:true,class:'easyui-textbox'})
      +fitem('Document ID',{name:'DOCUMENT_ID', class:'easyui-textbox'})
      +fitem('Tx Date',{name:'TRANSACTION_DATE',  class:'easyui-datebox'})  
  div(region="center" style="border:none; padding:0px;")
    #txgrid
    #tbar
      form#gfilter
        label From
        input.easyui-datebox.today(name="sdate" style="width:100px;")
        label To
        input.easyui-datebox.today(name="edate" style="width:100px;")
        label Part ID
        input.easyui-combobox(_sqlid="inv^partid" name="pid" )


style.
  #parttrans .fitem{
    margin-bottom: 8px !important;
  }
  
  #tbar {
    height:30px;
    line-height:30px;  
  } #tbar label {
    margin-left:16px;
    margin-right:4px;  
  }

script(type="text/javascript"): include js/part_trans_editor.js