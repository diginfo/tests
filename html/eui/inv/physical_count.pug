+layout({border:false})
  div(data-options="region:'west'" style="width:400px; background:#FAFAFA;" collapsible="false")  
    form#physical_count.multi(_sqlid='inv^physical_count' asdpx='adx').fit.easyui-form
      +layout({border:false})
        div(data-options="region:'north'" style="height:800px;background:#FAFAFA;").noborder

          +fitem('Physical Count ID',{id:'~', name:'PHYSICAL_COUNT_ID',class:'easyui-combobox fkey fit navi autonum', _sqlid:'inv^physical_count_ids' , panelWidth:'230px', validType:['length[1,30]'],'data-options':"groupField:'STATUS'"})
          +fitem('Start Date',{id:'~',name:'START_DATE', class:'easyui-datebox today'})
          +fitem('Inventory Lock',{id:'~', name:'INVENTORY_LOCK', required:true, class:'easyui-combobox','data-options':"data:[{text:'Yes',value:'Y'},{text:'No',value:'N'}]"})
          +fitem('Cycle Count',{id:'~', name:'CYCLE_COUNT', required:true, class:'easyui-combobox','data-options':"data:[{text:'Yes',value:'Y'},{text:'No',value:'N'}]"})
          
          .fbuts.center
            a.easyui-linkbutton#endcount(icon='icon-verified' style="margin-left:10px;margin-top:5px") End Count

          +fitem('User Password',{'id':'pwd',class:'easyui-textbox',type:'password'})
          +fieldset('End Count')
            +fitem('Date',{'id':'~',name:'END_DATE', class:'easyui-datebox'})
            +fitem('User',{'id':'~',name:'END_COUNT_USER',class:'easyui-textbox',readonly:true})
          +fieldset('Part')
            +fitem('Part ID',{id:'~',name:'PART_ID',class:'easyui-textbox '})
            +fitem('Product Code',{id:'~',name:'PRODUCT_CODE', class:'easyui-combobox', _sqlid:'vwltsa^productcodeid'}) 
            +fitem('Traceable',{id:'~',name:'TRACEABLE', class:'easyui-combobox ','data-options':"data:[{value:'',text:'All', selected:true},{text:'Yes',value:'Y'},{text:'No',value:'N'}]"})
            +fitem('Dimensions',{id:'~',name:'DIM_TRACKED', class:'easyui-combobox ','data-options':"data:[{value:'',text:'All', selected:true},{text:'Yes',value:'Y'},{text:'No',value:'N'}]"})
            +fitem('Part Class',{id:'~',name:'PART_CLASS_ID', class:'easyui-combobox ','data-options':"data:[ {value:'',text:'All', selected:true}, {value:'FG',text:'Finished Goods'},{value:'COMP',text:'Component'},{value:'MAKE_STAGED',text:'Make Staged'}, {value:'MAKE_NOSTAGE',text:'Make Unstaged'}]"})
          .fitem(style="margin-top:12px")
            label(style="margin-bottom:4px;") Notes
            +input({eui:'textbox',id:'~', name:'NOTES','data-options':"multiline:true", validType:['length[1,255]'], style:'height:150px;width:345px'})       
  div#shipdiv(data-options="region:'center'")  
    #lines

